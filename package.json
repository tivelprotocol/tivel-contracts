{
  "name": "tivel-contracts",
  "version": "0.0.1",
  "license": "MIT",
  "description": "Contracts for the Tivel Protocol",
  "author": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tivel/tivel-contracts.git"
  },
  "bugs": {
    "url": "https://github.com/tivel/tivel-contracts/issues"
  },
  "homepage": "https://github.com/tivel/tivel-contracts#readme",
  "keywords": [
    "tivel",
    "ethereum",
    "arbitrum"
  ],
  "scripts": {
    "build": "hardhat compile",
    "arbitrum:deploy": "hardhat run --network arbitrum scripts/arbitrum/deploy.ts",
    "arbitrum:manage-pricefeed": "hardhat run --network arbitrum scripts/arbitrum/manage-pricefeed.ts",
    "arbitrum:manage-dex": "hardhat run --network arbitrum scripts/arbitrum/manage-dex.ts",
    "arbitrum:manage-pool-deployer": "hardhat run --network arbitrum scripts/arbitrum/manage-pool-deployer.ts",
    "arbitrum:manage-factory": "hardhat run --network arbitrum scripts/arbitrum/manage-factory.ts",
    "arbitrum:manage-monitor": "hardhat run --network arbitrum scripts/arbitrum/manage-monitor.ts",
    "arbitrum:verify": "hardhat --network arbitrum etherscan-verify --solc-input",
    "test": "hardhat test",
    "build-contracts:common": "sol-merger \"./contracts/common/*.sol\" ./merged",
    "build-contracts:core_shortsale": "sol-merger \"./contracts/core/shortsale/*.sol\" ./merged",
    "build-contracts:core_swap": "sol-merger \"./contracts/core/swap/*.sol\" ./merged",
    "build-contracts:periphery_shortsale": "sol-merger \"./contracts/periphery/shortsale/*.sol\" ./merged",
    "build-contracts:periphery_swap": "sol-merger \"./contracts/periphery/swap/*.sol\" ./merged"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.6.1",
    "@ethersproject/keccak256": "^5.7.0",
    "@ethersproject/strings": "^5.7.0",
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@nomiclabs/hardhat-ganache": "^2.0.1",
    "@nomiclabs/hardhat-solhint": "^3.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.5",
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "@openzeppelin/hardhat-upgrades": "^1.22.1",
    "@tenderly/hardhat-tenderly": "^1.6.1",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.3",
    "@uniswap/v3-core": "^1.0.1",
    "@uniswap/v3-periphery": "^1.4.3",
    "axios": "^1.3.4",
    "chai": "^4.3.7",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^5.4.0",
    "hardhat": "^2.13.0",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-deploy": "^0.11.25",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-preprocessor": "^0.1.5",
    "hardhat-spdx-license-identifier": "^2.1.0",
    "hardhat-watcher": "^2.5.0",
    "prettier": "^2.8.5",
    "prettier-plugin-solidity": "^1.1.3",
    "sol-merger": "^4.3.0",
    "solhint": "^3.4.1",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^5.0.2"
  }
}
